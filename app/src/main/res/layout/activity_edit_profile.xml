<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailVerification"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:onClick="goBack"
            android:src="@drawable/back_arrow">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/back"
            android:gravity="center_vertical"
            android:text="Edit Profile"
            android:textColor="@color/gray"
            android:textSize="26sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="Save Changes"
            android:textColor="@color/orange"
            android:textSize="20sp"
           >

        </TextView>


    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_gray"
        android:layout_alignBottom="@id/box1"

        >

    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        >

    <RelativeLayout

        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:padding="15dp"
       >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/enter_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/name"
            android:layout_marginTop="40dp"
            android:hint="Enter name"
            android:paddingLeft="20dp"
            android:textSize="24sp"
            android:background="@drawable/rounded_corners"
            android:gravity="center_vertical"
            >

        </TextView>

        <TextView
            android:id="@+id/email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/enter_email2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/email2"
            android:layout_marginTop="40dp"
            android:hint="duad@gmail.com"
            android:paddingLeft="20dp"
            android:textSize="24sp"
            android:background="@drawable/rounded_corners"
            android:gravity="center_vertical"
            >

        </TextView>

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/email2"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:text="Contact Number"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/enter_contact_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/contact_number"
            android:layout_marginTop="40dp"
            android:hint="0123 4567890"
            android:paddingLeft="20dp"
            android:textSize="24sp"
            android:background="@drawable/rounded_corners"
            android:gravity="center_vertical"
            >

        </TextView>

        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/contact_number"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:text="Country"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_corners"
            android:layout_alignTop="@+id/country"
            android:layout_marginTop="40dp"/>
        <Spinner

            android:layout_alignTop="@+id/country"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:paddingLeft="20dp"
            android:entries="@array/countries">

        </Spinner>



        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/country"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:text="City"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_corners"
            android:layout_alignTop="@+id/city"
            android:layout_marginTop="40dp"/>
        <Spinner

            android:layout_alignTop="@+id/city"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:paddingLeft="20dp"
            android:entries="@array/cities">

        </Spinner>






    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
